{
  "name": "pouchdb-authentication",
  "version": "0.1.1",
  "description": "PouchDB Authentication",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/pouchdb/authentication.git"
  },
  "scripts": {
    "jshint": "jshint -c .jshintrc *.js test/test.js",
    "build-js": "mkdir -p dist && browserify index.js -o dist/pouchdb.authentication.js",
    "min": "uglifyjs dist/pouchdb.authentication.js -mc > dist/pouchdb.authentication.min.js",
    "build": "npm run build-js && npm run min",
    "dev": "npm run jshint && browserify test/test.js > test/test-bundle.js && npm run dev-server",
    "dev-server": "./bin/dev-server.js"
  },
  "keywords": [
    "pouch",
    "pouchdb",
    "authentication",
    "couch",
    "couchdb"
  ],
  "author": "",
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/pouchdb/authentication/issues"
  },
  "dependencies": {
    "inherits": "~2.0.1"
  },
  "devDependencies": {
    "lie": "^2.5.3",
    "bluebird": "^1.0.7",
    "browserify": "~3.44.1",
    "chai": "~1.8.1",
    "chai-as-promised": "~4.1.0",
    "istanbul": "~0.1.45",
    "jshint": "~2.3.0",
    "mocha": "~1.14.0",
    "mocha-as-promised": "~2.0.0",
    "pouchdb": "^2.0.0",
    "watchify": "~0.7.2",
    "http-proxy": "~0.10.4",
    "corsproxy": "~0.2.14",
    "http-server": "~0.5.5",
    "uglify-js": "~2.4.13"
  },
  "peerDependencies": {
    "pouchdb": ">= 2.0.0"
  },
  "browser": {
    "lie" : false
  }
}
